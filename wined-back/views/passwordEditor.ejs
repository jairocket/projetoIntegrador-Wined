    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
</head>

<%- include('./partials/header') %>
<main>

    <section class="passwordForm">

        <form action='/cadastrar/password?_method=PUT' method="POST" class="formulario">
            <div id="call">
                Troque sua senha 
              </div>
            <div id="call-text">
                <h2>Troque sua senha regularmente e evite senhas f√°ceis, como data de nascimento, por exemplo.</h2>
            </div>
    
            <div>
                <label>
                    <input class="password-form" type="password" name="old_password" id="old_password" placeholder="Digite a senha antiga"><i class="bi bi-eye-slash" id="togglePasswordOld"></i>
                </label>
                <br>
                <label>
                    <input class="password-form" type="password" name="new_password" id="new_password" placeholder="Digite uma nova senha"><i class="bi bi-eye-slash" id="togglePasswordNew"></i>
                </label>
            </div>
            <button class="button btn-form" type="submit">Enviar</button> 
            
        </form>
    
    </section>

</main>
<script type="text/javascript" src="../js/passwordEditor.js"></script>

