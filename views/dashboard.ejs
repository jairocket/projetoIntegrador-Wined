<head><link rel="stylesheet" href="../../stylesheets/dashboard.css"></head>
<%- include('./partials/header') %>

<main>
    <div class="main">
        <section class="profileInfo">
            <%- include('./partials/topview') %>
            <div class="userDescription">
                <p><%= user.description %></p>
            </div>
            <div class= dashMenu>
            <div class="brotherhoodMenu">
                
                <a href='/confraria/criar'><p>Criar Confraria</p></a>
                <!-- <a href="#"><p>Agenda</p></a> -->
                
            </div>

        </section>
        <section class="adega">
            <section  id="adega">
                <h4>Adega</h4>
                <!-- <div id="divBusca">
                    <input type="text" id="txtBusca" placeholder="Buscar...">
                    <img src="../images/search.svg" id="btnBusca"  data-type="get-wines" alt="Buscar">
                </div> -->
                <form action="http://localhost:3000/dashboard/wines" method="GET">
                    <label for="parameter"></label>
                    <input type="text" name="parameter" id="txtBusca" placeholder="Buscar...">
                    <button type="submit" data-type="get-wines"><img src="../images/search.svg" id="btnBusca"  data-type="get-wines" alt="Buscar"></button>
                </form>
            </section>
            <section id='events'>
                <h4>Próximos Encontros</h4>
                <% events.forEach(event =>{ %>
                    <div id='event'>
                        <div id='event-title'>
                            <h6>Evento <%= event.name %> </h6>
                        </div>
                        <div>
                            <p>
                                Endereço: <%= event.street %> <%= event.number %> <%= event.complement %>
                                <%= event.city %>/ <%= event.state %> 
                                CEP <%= event.cep %> 
                             </p>
                        </div>
                        <div>
                            <p>
                                Nos vemos dia <%= event.date %> às <%= event.time %>
                            </p>
                        </div>
                        <div id="event-menu">
                            <form action="/dashboard/evento/sair/<%= event.id %>?_method=DELETE" method="POST">
                                <button type="submit">Faltar</button>
                            
                            </form>
                            
                        </div>
                    </div>

                <% }) %>

            </section >

        </section>


        <section class="myBrotherhoods">
            <h4>Confrarias</h4>
            <% brotherhoods.forEach((brotherhood)=>{ %>
                <a href ="/confraria/<%= brotherhood.id %>"><div class="brotherhood"><%= brotherhood.name %></div></a><br>
            <% }) %>
        </section>


    </div>

</main>

<%- include('./partials/footer')  %>  

<script src='../js/dashboard.js'></script>
<script src='../js/topView.js'></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>