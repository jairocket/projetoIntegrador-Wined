<head>
    <link rel="stylesheet" href="../../stylesheets/brotherhoodCreator.css">
    <script type="text/javascript" src="../../js/brotherhood.Creator.js"></script>
    <script type="text/javascript" src="../../js/dropdown.js"></script> 
</head>
  
  <%- include('./partials/header')  %>

  <body>  
    <main>
      <section class = registerForm>
        <div id="call">
          Personalize sua confraria <h1 id="logo">Wined+</h1>
        </div>
        <div id="call-text">
          <h2>Deixe sua confraria do seu jeito</h2>
        </div>      
        <br>
        <form action='<%= id %>?_method=PUT'method="POST" class="formulario">

          <label for="name">
            <input type="text" name="name" id="name" placeholder="Escolha um nome para sua confraria" value="<%= locals.old && old.name %>">
          </label>
  
          <label for="description">
              <textarea name="description" id="description" cols="1" rows="3" placeholder="Descreva sua confraria" value="<%= locals.old && old.name %>" ></textarea>
          </label>
  
          <label for="since">
              <input type="text" onfocus="(this.type='date')" name="since" id="since" placeholder="Data de criação" value="<%= locals.old && old.birthday %>">
          </label>

          <button class="button btn-form" type="submit">Editar Confraria</button>

        </form>
      </section>

      <section class="registerForm">
        <div id="call-text">
          <h2>Adicione novos confrades</h2>
        </div> 
        
        <form action="adicionar/<%= id %>" method="POST" class="formulario">
          <div id='addMember'>

            <div id='member'>
              <label for='members'>
                <input type= 'email' name='members' id='members' placeholder='Informe o e-mail do seu ou sua confrade'>
              </label>
            </div>
            </div>

            <div id='newInput'></div>

            <div id="addMember-addInput">
              <button class ="button btn-add"type="button" value="addInput" onclick="addNewInput();">Adicionar E-mail</button>
              <button class="button btn-form1" type="submit">Submeter</button>
            </div>

          </div> 
        </form>
      </section>

      <section class="registerForm">

        <div id="call-text">
          <h2>Gerenciar confrades</h2><br>
        </div> 
        <table>
          <% members.forEach((member)=>{ %>
              <tr id="memberOptions">
                <td id="memberName">
                  <span><%= member.name %> <%= member.surname %></span>   
                </td>
                <td id='chancellor'>
                  <form action="/confraria/editar/chancellor/<%= id %>/<%= member.id %>?_method=PUT" method="POST">
                    <button type="submit">Tornar Chanceler</button>
                  </form>
                </td>
                <td id='remove'>
                  <form action="/confraria/editar/delete/<%= id %>/<%= member.id %>?_method=DELETE" method="POST">
                    <button type="submit">Remover</button>
                  </form>
                </td>
              </tr>
          <% }) %>
        </table>


      </section>

      <section class="registerForm">

        <div id="call-text">
          <h2>Deseja excluir sua confraria?</h2>
        </div>

        <form action='/confraria/delete/<%= id %>?_method=DELETE'method="POST" class="formulario">
          <div class="terms">
            <label>
              <input type="checkbox" name="terms" id="terms">
            </label>
            <div class="terms-text">
              Desejo excluir a confraria e todas as lembranças felizes compartilhadas com a Wined+.
            </div>
          </div>
          <button class="button btn-form" type="submit">Remover Confraria</button>
        </form>

      </section>
    </main>
    <%- include('./partials/footer')  %>   
  </body>