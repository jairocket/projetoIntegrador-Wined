          <input type="radio" name="date" id="date">
        </label> 

        <% if (#date == "on"){ %>
        
        <label for="date"> Selecione o dia
          <input type="date" name="date" id="date1" placeholder="01/01/2000">
        </label>
        <%  }%>
      </div>
    <div>
      <p>Nome do(a) Criador(a)</p>
      <label for="nameCreate"> 
        <input type="text" name="nameCreate" id="nameCreate" placeholder="Nome">
      </label>

      <p>Sobrenome do(a) Criador(a)</p>
      <label for="surnameCreate"> 
        <input type="text" name="surnameCreate" id="surnameCreate" placeholder="Sobrenome">
      </label>
    </div>

    <label for="description"> 
      <textarea name="description" id="description" placeholder="Ex: Nós somos a Confraria 
      ... gostamos..."></textarea>
    </label>
    
      <button class="button btn-form" type="submit">Criar Confraria</button>
