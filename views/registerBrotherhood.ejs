        <% errors.forEach((error)=>{ %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>

    <form action='/confraria/cadastrar' method="POST" class="formulario">

      <label for="nameBrotherhood">Nome da Confraria
        <input type="text" name="nameBrotherhood" id="nameBrotherhood" placeholder="Ex: Apreciadores 2021">
      </label>
      <div class = "dateBrotherhood">
          <p>Data de criação</p>
        <label>A contar de hoje
          <input type="radio" name="date" id="date-now">
        </label>
